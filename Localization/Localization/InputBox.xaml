<Window x:Class="Localization.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Localization"
        mc:Ignorable="d"
        Title="InputDialog" Height="130" Width="270">
    <StackPanel Margin="10">
        <TextBlock Text="Enter a value:" />
        <TextBox x:Name="InputTextBox" Margin="0,4"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Content="Cancel" Grid.Column="0" Click="CancelButton_Click" Margin="0,0,2,0" />
            <Button Content="OK" Grid.Column="1" Click="OkButton_Click" Margin="2,0,0,0" />
        </Grid>
    </StackPanel>
</Window>
